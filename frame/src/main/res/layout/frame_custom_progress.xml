<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:export="http://schemas.android.com/apk/res-auto"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/mow_white_color"
              android:gravity="center_vertical"
              android:padding="15dp">

    <trilateral.com.mowtogether.lib.common.widget.ProgressWheel
        android:id="@+id/spinnerImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        export:mow_matProg_barColor="@color/mow_btn_color"
        export:mow_matProg_progressIndeterminate="true"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="@color/mow_light_yellow_color"
        android:textSize="16sp"/>
</LinearLayout>