<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    
    <ImageView
        android:src="@mipmap/frame_pager_error"
        android:layout_width="160dp"
        android:layout_height="147dp"/>
    
    <TextView
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/frame_view_net_error"
        android:textSize="14sp"
        android:textColor="@color/frame_text_hint_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@drawable/frame_shape_btn_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:id="@+id/tv_view_pager_error_load"
        android:text="@string/frame_load_again"
        android:textSize="14sp"
        android:textColor="@color/frame_main_tab_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>