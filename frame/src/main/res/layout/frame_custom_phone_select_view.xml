<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/frame_shape_custom_dialog_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:paddingBottom="15dp"
        android:id="@+id/tv_custom_device_selector_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:textColor="@color/frame_text_yellow_color"
        android:textSize="20sp"/>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        style="@style/frame_line_horizontal"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/rg_custom_device_selector_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </ScrollView>
</LinearLayout>